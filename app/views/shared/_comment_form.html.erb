<%= form_for([@report, @comment]) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :content, class: 'form-control',
                    placeholder: t('placeholder.comment.content'),
                    rows: 5%>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>