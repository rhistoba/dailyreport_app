<% provide(:title, @user.name) %>
<div class="col-md-4 col-md-offset-1">
  <h3><%= t('headline.user.show.info') %></h3>
  <table class="table table-bordered">
    <tbody>
    <tr>
      <th width="120"><%= t('activerecord.attributes.user.name') %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.user.department') %></th>
      <td><%= @user.department %></td>
    </tr>
    </tbody>
  </table>
</div>
<div class="col-md-10 col-md-offset-1">
  <h3><%= t('headline.user.show.reports') %></h3>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.report.date') %></th>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th><%= t('activerecord.attributes.report.title') %></th>
      <th><%= t('table_column.comment_num') %></th>
    </tr>
    </thead>
    <tbody>
    <%= render @reports %>
    </tbody>
  </table>
  <%= will_paginate @reports %>
</div>
